typename enable_if<is_integral<_T>::value && is_integral<_U>::value, double>::type
pow(_T __x, _U __y)
{
    return ::pow(__x, __y);
}

template<typename _T>
typename enable_if<is_integral<_T>::value, double>::type
sqrt(_T __x)
{
    return ::sqrt(__x);
}


tanh(_T __x)
{
    return ::tanh(__x);
}

template<typename _T>
typename enable_if<is_integral<_T>::value, double>::type
ceil(_T __x)
{
    return __x;
}

template<typename _T>
typename enable_if<is_integral<_T>::value, double>::type
floor(_T __x)
{
    return __x;
}

template<typename _T>
typename enable_if<is_integral<_T>::value, double>::type
frexp(_T __x, int* __exp)
{
    return ::frexp(__x, __exp);
}

template<typename _T>
typename enable_if<is_integral<_T>::value, double>::type
